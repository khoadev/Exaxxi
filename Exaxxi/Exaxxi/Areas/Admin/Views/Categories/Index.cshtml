@model PagedList.Core.IPagedList<Exaxxi.Models.Categories>

@{
    ViewData["Title"] = "Categories";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title ">Danh sách thể loại</h4>
                <p class="card-category">Quản lý danh sách thể loại</p>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                            <tr>
                                <th>
                                    Tên loại
                                </th>
                                <th>
                                   Trạng thái
                                </th>
                                <th>
                                   Thứ tự
                                </th>
                                <th>
                                   Brand
                                </th>
                                <th class="text-right"><a asp-action="Create">Tạo Mới</a></th>
                            </tr>
                        </thead>
                        <tbody ng-controller="deleteCa">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.active)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.order)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.brand.name)
                                    </td>
                                    <td class="td-actions text-right">
                                        <a asp-action="Edit" asp-route-id="@item.id">
                                            <button type="button" rel="tooltip" title="Edit Task" class="btn btn-primary btn-link btn-sm">
                                                <i class="material-icons">edit</i>
                                            </button>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.id">
                                            <button type="button" rel="tooltip" title="Detail" class="btn btn-primary btn-link btn-sm">
                                                <i class="material-icons">
                                                    info
                                                </i>
                                            </button>
                                        </a>
                                        <button ng-click="Delete(@item.id)" type="button" rel="tooltip" title="Remove" class="btn btn-danger btn-link btn-sm">
                                            <i class="material-icons">close</i>
                                        </button>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<pager class="pager-container" list="@Model" asp-action="Index" asp-controller="Categories" />
@section Scripts{
    <script>
        app.controller('deleteCa', function ($scope, $http) {
            $scope.Delete = function (id) {
                var url = '/api/CategoriesChange/' + id;
                //  $http.defaults.headers.common.Authorization = 'Bearer ' + sessionStorage.getItem('token');
                var config = {
                    headers: {
                        'Context-Type': 'application/json',
                        'Authorization': 'Bearer ' + sessionStorage.getItem('token')
                    }
                }
                var isConfirm = confirm("bạn có chắc chắn muốn xóa")
                if (isConfirm) {
                    $http.delete(url, config).then(function (response) {
                        window.location.reload();
                    });

                } else {
                    return false;
                }
            }
        });
    </script>
}
