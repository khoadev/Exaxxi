@model Exaxxi.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    string actionName = this.ViewContext.RouteData.Values["action"].ToString();
    string login = "";
    string register = "";
    string firsttitle = "";
    string buttontext = "";
    if (actionName == "Login")
    {
        login = "";
        register = "hidden";
        firsttitle = "not-member";
        buttontext = "register-now";
    }
    if (actionName == "Register")
    {
        login = "hidden";
        register = "";
        firsttitle = "welcome";
        buttontext = "login";
    }
}


<div id="logreg-background">

    <div class="container">
        <div class="row" id="logreg-wrapper">
            <div class="col-md-9" id="logreg-form-wrapper">
                <div id="login-form" class="@login">
                    <p class="login-form-text">Login </p>
                    <form>
                        <div class="form-group">
                            <label for="usr" class="login-form-label">Email Address</label>
                            <input type="text" class="form-control form-control-login" placeholder="Enter your email address" id="usr">
                        </div>
                        <div class="form-group">
                            <label for="pwd" class="login-form-label">Password</label>
                            <input type="password" class="form-control form-control-login" placeholder="Enter your password" id="pwd">
                        </div>
                        <label class="checkbox-container">
                            Remember me
                            <input type="checkbox" id="rmb">
                            <span class="checkmark"></span>
                        </label>
                        <button type="button" class="btn logreg-form-button " id="submit">Login</button> <br><a href="#" id="login-form-link">Forget your password?</a>
                    </form>
                </div>

                <div id="register-form" class="@register">
                    <p class="login-form-text">Register</p>
                    <form>
                        <div class="form-group">
                            <label class="login-form-label">Name</label>
                            <input type="text" class="form-control form-control-login" placeholder="Enter your name" id="name_re" required>
                        </div>
                        <div class="form-group">
                            <label class="login-form-label">Email Address</label>
                            <input type="email" class="form-control form-control-login" placeholder="Enter your email address" id="email_re" required>
                        </div>
                        <div class="form-group">
                            <label class="login-form-label">Password</label>
                            <input type="password" class="form-control form-control-login" placeholder="Enter your password" id="pwd_re" required>
                        </div>
                        <div class="form-group">
                            <label class="login-form-label">Re-enter Password</label>
                            <input type="password" class="form-control form-control-login" placeholder="Re-enter your password" id="pwd_re_conf" required>
                        </div>
                        <button type="button" id="sb_reg" class="btn logreg-form-button">Register</button>
                    </form>
                </div>
            </div>
            <div class="col-md-3" id="login-form-register">
                <p id="login-form-register-header" class="@firsttitle"></p>
                <p id="login-form-register-quote">
                    "I think there is beauty in
                    everything. What 'normal'
                    people perceive as ugly,
                    I can usually see something
                    of beauty in it."<br>
                    <span>Alexander McQueen</span>
                </p>
                <button class="btn @buttontext" id="login-form-register-button"></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $(function () {
            //Login
            $("#submit").on("click", function () {
                var username = $("#usr").val();
                var password = $("#pwd").val();
                var remember = $("#rmb").val();
                var login = {
                    "username": username,
                    "password": password,
                    "remember": remember,
                };
                $.ajax({
                    url: "/api/UsersAPI/PostUser",
                    type: "POST",
                    data: JSON.stringify(login),
                    contentType: "application/json",
                    success: function () {
                        window.location = "/Home";
                    },
                    error: function (notfound) {
                        alert(notfound.responseText);
                    }
                });
            });

            //Register
            $("#sb_reg").on("click", function () {
                var name = $("#name_re").val();
                var email = $("#email_re").val();
                var password = $("#pwd_re").val();
                var password_confirm = $("#pwd_re_conf").val();              
                var register = {
                    "name": name,
                    "email": email,
                    "password": password,
                    "confirm_password": password_confirm,
                };
                $.ajax({
                    url: "/api/UsersAPI/PostRegister",
                    type: "POST",
                    data: JSON.stringify(register),
                    contentType: "application/json",
                    success: function () {
                        alert("Đăng ký thành công!");
                        window.location = "/Login/Login";
                    },
                    error: function (notfound) {
                        alert(notfound.responseText);
                    }
                });
            });

        });
    </script>
}
