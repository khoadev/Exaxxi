@model Exaxxi.Models.Posts

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Posts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Posts">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date_start" class="control-label"></label>
                <input asp-for="date_start" class="form-control" />
                <span asp-validation-for="date_start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date_end" class="control-label"></label>
                <input asp-for="date_end" class="form-control" />
                <span asp-validation-for="date_end" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kind" class="control-label"></label>
                <input asp-for="kind" class="form-control" />
                <span asp-validation-for="kind" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_size" class="control-label"></label>
                <select asp-for="id_size" class="form-control" id="size"></select>
            </div>
            <div class="form-group">
                <label asp-for="id_user" class="control-label"></label>
                <select asp-for="id_user" class="form-control" id="user"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {

            $.ajax({
                url: "/api/ds_SizeAPI",
                method: "GET",
                success: function (data) {
                    $(data).each(function (index, value) {

                        var option = $("<option/>").attr("value", value.id).html(value.vn);

                        $("#size").append(option)
                    });
                }
            });
            $.ajax({
                url: "/api/UsersAPI",
                method: "GET",
                success: function (data) {
                    $(data).each(function (index, value) {

                        var option = $("<option/>").attr("value", value.id).html(value.name);

                        $("#user").append(option)
                    });
                }
            });
        });
    </script>
}

