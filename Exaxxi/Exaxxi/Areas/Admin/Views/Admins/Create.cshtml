@model Exaxxi.Models.Admins

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Tạo Mới</h4>
                <p class="card-category">Admins</p>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="id" />
                    <div class="form-group">
                        <label asp-for="name" class="bmd-label-floating"></label>
                        <input asp-for="name" class="form-control" required />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="password" class="bmd-label-floating"></label>
                        <input asp-for="password" type="password" class="form-control" required />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span style="color:red">@ViewBag.EmailExist</span>
                        <label asp-for="email" class="bmd-label-floating"></label>
                        <input asp-for="email" type="email" class="form-control" required />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                    <div class="form-group">                        
                        <label asp-for="level">Level (Vui lòng nhập số theo tính năng gợi ý)</label>
                        <input asp-for="level" type="number" min="1" max="4" class="form-control" placeholder="1: QL Tổng, 2: QL Tin Tức, 3: QL Sản Phẩm, 4: Quản Lý Giao Dịch" required />
                        <span asp-validation-for="level" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-check p-0">
                            <label class="form-check-label">
                                @Html.DisplayNameFor(model => model.active)
                                <input asp-for="active" class="form-check-input" type="checkbox">
                                <span class="form-check-sign">
                                    <span class="check"></span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Index">Quay Về</a>
                    </div>
                    <button type="submit" class="btn btn-primary pull-right">Tạo</button>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>

</div>