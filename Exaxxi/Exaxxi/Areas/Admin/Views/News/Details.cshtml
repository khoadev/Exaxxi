@model Exaxxi.Models.News

@{
    ViewData["Title"] = "Details";
}
<div>
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Chi Tiết</h4>
                    <p class="card-category">Tin Tức</p>
                </div>
                <div class="card-body">
                    <form>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="id" />
                        <div class="form-group">
                            <label asp-for="vi_title" class="bmd-label-floating"></label>
                            <input asp-for="vi_title" class="form-control" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label asp-for="en_title" class="bmd-label-floating"></label>
                            <input asp-for="en_title" class="form-control" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label>
                                Hình
                            </label>
                            <img src="~/images/news/@Model.img" height="200" width="100" />

                        </div>
                        <div class="form-group">
                            <label asp-for="vi_content" class="bmd-label-floating"></label>
                            <textarea asp-for="vi_content" class="form-control" disabled="disabled"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="en_content" class="bmd-label-floating"></label>
                            <textarea asp-for="en_content" class="form-control" disabled="disabled"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="date_create" class="bmd-label-floating"></label>
                            <input asp-for="date_create" class="form-control" disabled="disabled" />
                        </div>

                        <div class="form-group">
                            <label class="bmd-label-floating">Thuộc chủng loại</label>
                            <input class="form-control" value="@Html.DisplayFor(model => model.department.vi_name)" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <div class="form-check p-0">
                                <label class="form-check-label">
                                    @Html.DisplayNameFor(model => model.active)
                                    <input asp-for="active" class="form-check-input" type="checkbox" disabled="disabled" value="">
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                        </div>
                        <a asp-action="Index">Back to List</a>
                        <a asp-action="Edit" asp-route-id="@Model.id">
                            <button type="button" class="btn btn-primary pull-right">Chỉnh Sửa</button>
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>