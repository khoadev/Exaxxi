@model IEnumerable<Exaxxi.ViewModels.LoginViewModel>

@{
    ViewData["Title"] = "Login";
}

<div id="logreg-background">

    <div class="container">
        <div class="row" id="logreg-wrapper">
            <div class="col-lg-9" id="logreg-form-wrapper">
                <div id="login-form">
                    <p class="login-form-text">Login </p>
                    <form>
                        <div class="form-group">
                            <label for="usr" class="login-form-label">Email Address</label>
                            <input type="text" class="form-control form-control-login" placeholder="Enter your email address" id="usr">
                        </div>
                        <div class="form-group">
                            <label for="pwd" class="login-form-label">Password</label>
                            <input type="password" class="form-control form-control-login" placeholder="Enter your password" id="pwd">
                        </div>
                        <button type="button" class="btn logreg-form-button " id="submit">Login</button> <br>
                        <a id="login-form-link" asp-action="PasswordForget" asp-controller="Login">Forget your password?</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $(function () {
            //Login
            $("#submit").on("click", function () {
                var username = $("#usr").val();
                var password = $("#pwd").val();
                var login = {
                    "username": username,
                    "password": password,
                };
                $.ajax({
                    url: "/api/AdminsAPI/PostAdminsEmail",
                    type: "POST",
                    data: JSON.stringify(login),
                    contentType: "application/json",
                    success: function () {
                        window.location = "/Admin/Admins/Index";
                    },
                    error: function (notfound) {
                        alert(notfound.responseText);
                    }
                });
            });

        });


    </script>

}
