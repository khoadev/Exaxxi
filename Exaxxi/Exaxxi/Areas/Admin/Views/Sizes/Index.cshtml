@model IEnumerable<Exaxxi.Models.Sizes>

@{
    ViewData["Title"] = "Post";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title ">Danh sách size</h4>
                <p class="card-category"></p>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                            <tr>
                                <th>
                                    Giá mua thấp nhất
                                </th>
                                <th>
                                    Giá bán cao nhất
                                </th>
                                <th>
                                    Last Sale
                                </th>
                                <th>
                                    Size (VN)
                                </th>
                                <th>
                                    Sản phẩm
                                </th>
                                <th>Chi tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Convert.ToDouble(item.lowest_ask).ToString("#,###") VND
                                    </td>
                                    <td>
                                        @Convert.ToDouble(item.highest_bid).ToString("#,###") VND
                                    </td>
                                    <td>
                                        @Convert.ToDouble(item.last_sale).ToString("#,###") VND
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.size.VN)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.item.name)
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.id">Xem chi tiết</a> 
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>