@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<div class="container-fluid" style="background-color:#f2f2f2; min-height:100vh" ng-controller="User">
    <div class="row">

        @Html.Partial("~/Views/User/Menu.cshtml")

        <div class="col-md-9">

            <div class="user-info">
                <h3 class="d-inline-block">
                    <b>SELLER LEVEL:</b>
                </h3>
                <div class="user-level user-level-completed">{{user_info.level_seller}}</div>
                <div class="row">
                    <div class="col-md-4 ">

                        <h5 class="font-weight-bold">SALES: 0</h5>
                        <h5 class="font-weight-bold">TRANSACTION FEE:</h5>
                        <h6>WATCHES: 9.8%</h6>
                        <h6>HANDBAGS: 10%</h6>
                        <h6>STREETWEAR: 9.5%</h6>
                    </div>
                    <div class="col-md-8">
                        <div class="progress user-progress  mt-2">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width:40%; color:white;">
                                1/3 SALES COMPLETED
                            </div>
                        </div>

                        <div class="d-flex mt-3">
                            <h4>
                                2 MORE NEEDED TO REACH LEVEL
                            </h4>
                            <div class="user-level">2</div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script>
        //Show Department
        exaxxiApp.controller('User', function ($scope, $http) {

             //Take Info User
            $http.get("/api/UsersAPI/" + @HttpContextAccessor.HttpContext.Session.GetInt32("idUser"))
                .then(function (response) { $scope.user_info = response.data });
        });
    </script>
}