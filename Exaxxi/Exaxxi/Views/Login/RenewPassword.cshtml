
@{
    ViewData["Title"] = "RenewPassword";
}

<h2 style="margin-top:200px">RenewPassword</h2>

<form>
    <div class="form-group">
        <label class="login-form-label">New Password</label>
        <input type="password" class="form-control form-control-login" placeholder="Enter your email address" id="pass">
    </div>
    <div class="form-group">
        <label class="login-form-label">Re-Password</label>
        <input type="password" class="form-control form-control-login" placeholder="Enter your re-email address" id="re_pass">
    </div>
    <button type="button" class="btn logreg-form-button" id="submit">Send</button> <br>
</form>

@section Scripts{
    <script>
        $(function () {
            $("#submit").on("click", function () {
                var pass = $("#pass").val();
                var re_pass = $("#re_pass").val();
                alert(pass);
                var renew = {
                    password: pass.toString(),                    
                    username: "@ViewBag.Email",
                    hash: "@ViewBag.Hash",
                    repass: re_pass.toString(),
                };
                
                $.ajax({
                    url: "/api/UsersAPI/RenewPassword",
                    type: "POST",
                    data: JSON.stringify(renew),
                    dataType:"json",
                    contentType: "application/json",
                    success: function () {
                        alert("Đổi mật khẩu thành công");
                        window.location = "/Login/Login";
                    },
                    error: function (notfound) {
                        alert(notfound.responseText);
                    }
                });
            });
        });
    </script>
}

