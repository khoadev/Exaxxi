@model IEnumerable<Exaxxi.Models.Sizes>

@{
    ViewData["Title"] = "Post";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title ">Danh sách bài Post</h4>
                <p class="card-category"></p>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.lowest_ask)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.highest_bid)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.last_sale)
                                </th>
                                <th>
                                    Size Việt Nam
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.item)
                                </th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.lowest_ask)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.highest_bid)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.last_sale)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.size.VN)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.item.name)
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.id">Details</a> 
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>