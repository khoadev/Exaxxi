@model Exaxxi.Models.Departments

@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Chỉnh Sửa</h4>
                <p class="card-category">Chủng Loại</p>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="id" />
                    <div class="form-group">
                        <label asp-for="vi_name" class="bmd-label-floating"></label>
                        <input asp-for="vi_name" class="form-control" />
                        <span asp-validation-for="vi_name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="en_name" class="bmd-label-floating"></label>
                        <input asp-for="en_name" class="form-control" />
                        <span asp-validation-for="en_name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="bmd-label-floating">Thứ tự</label>
                        <input asp-for="order" class="form-control" />
                        <span asp-validation-for="order" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="form-check p-0">
                            <label class="form-check-label">
                                @Html.DisplayNameFor(model => model.active)
                                <input asp-for="active" class="form-check-input">
                                <span class="form-check-sign">
                                    <span class="check"></span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Index">Quay Về</a>
                    </div>
                    <button type="submit" class="btn btn-primary pull-right">Cập Nhật</button>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>

</div>