@model Exaxxi.Models.Categories

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Categories</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="vi_name" class="control-label"></label>
                <input asp-for="vi_name" class="form-control" />
                <span asp-validation-for="vi_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="active" /> @Html.DisplayNameFor(model => model.active)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="order" class="control-label"></label>
                <input asp-for="order" class="form-control" />
                <span asp-validation-for="order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_brand" class="control-label"></label>
                <select asp-for="id_brand" class="form-control" id="brandname"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts{
    <script>
            $(function () {

                $.ajax({
                    url: "/api/BrandsAPI",
                    method: "GET",
                    success: function (data) {
                        $(data).each(function (index, value) {
                           
                            var option = $("<option/>").attr("value", value.id).html(value.name);
                            
                            $("#brandname").append(option)
                        });
                    }
                });
            });
    </script>
}
