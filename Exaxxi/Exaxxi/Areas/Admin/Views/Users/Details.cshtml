@model Exaxxi.Models.Users

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Chi Tiết</h4>
                <p class="card-category">Users</p>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="id" />
                    <div class="form-group">
                        <label asp-for="name" class="control-label bmd-label-floating"></label>
                        <input asp-for="name" class="form-control" disabled />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="password" class="control-label bmd-label-floating"></label>
                        <input asp-for="password" class="form-control" disabled />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="password" class="control-label bmd-label-floating"></label>
                        <input asp-for="password" class="form-control" disabled />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="password" class="control-label bmd-label-floating"></label>
                        <input asp-for="password" class="form-control" disabled />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="email" class="control-label bmd-label-floating"></label>
                        <input asp-for="email" class="form-control" disabled />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="level_seller" class="control-label bmd-label-floating"></label>
                        <input asp-for="level_seller" class="form-control" disabled />
                        <span asp-validation-for="level_seller" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="score_buyer" class="control-label bmd-label-floating"></label>
                        <input asp-for="score_buyer" class="form-control" disabled />
                        <span asp-validation-for="score_buyer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="date_registion" class="control-label bmd-label-floating"></label>
                        <input asp-for="date_registion" class="form-control" disabled />
                        <span asp-validation-for="date_registion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-check p-0">
                            <label class="form-check-label">
                                @Html.DisplayNameFor(model => model.active)
                                <input asp-for="active" class="form-check-input" type="checkbox" disabled>
                                <span class="form-check-sign">
                                    <span class="check"></span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <a asp-action="Index">Quay Về</a>
                    <a asp-action="Edit" asp-route-id="@Model.id">
                        <button type="button" class="btn btn-primary pull-right">Chỉnh Sửa</button>
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>