@model Exaxxi.ViewModels.ItemViewAdmin

@{
    ViewData["Title"] = "Details";
}
<div class="row" ng-controller="editDsSize">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Chi Tiết</h4>
                <p class="card-category">Item</p>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-controller="Items" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="items.id" />
                    <div class="form-group">
                        <label asp-for="items.name" class="bmd-label-floating"></label>
                        <input asp-for="items.name" class="form-control" disabled />
                        <span asp-validation-for="items.name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <img src="~/images/item/@Model.items.img" height="200" width="100" />
                        @*<input asp-for="img" class="hidden form-control" />*@
                    </div>
                    <div class="form-group">
                        <label asp-for="items.vi_info" class=" bmd-label-floating"></label>
                        <textarea asp-for="items.vi_info" class="form-control" rows="5" disabled></textarea>
                        <span asp-validation-for="items.vi_info" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="items.en_info" class="bmd-label-floating"></label>
                        <textarea asp-for="items.en_info" class="form-control" rows="5" disabled></textarea>
                        <span asp-validation-for="items.en_info" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="items.volatility" class="bmd-label-floating"></label>
                        <input asp-for="items.volatility" class="form-control" disabled />
                        <span asp-validation-for="items.volatility" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="items.trade_min" class="bmd-label-floating"></label>
                        <input asp-for="items.trade_min" class="form-control" disabled />
                        <span asp-validation-for="items.trade_min" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="items.trade_max" class="bmd-label-floating"></label>
                        <input asp-for="items.trade_max" class="form-control" disabled />
                        <span asp-validation-for="items.trade_max" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="bmd-label-floating">Số lượng đã bán</label>
                        <input asp-for="items.sold" class="form-control" disabled />
                        <span asp-validation-for="items.sold" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="bmd-label-floating">Admin</label>
                        <input asp-for="nameAdmin" class="form-control" id="admin" disabled>
                        <span asp-validation-for="nameAdmin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="bmd-label-floating">Thể Loại</label>
                        <input asp-for="nameCate" class="form-control" id="category" disabled />
                        <span asp-validation-for="nameCate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-check p-0">
                            <label class="form-check-label">
                                @Html.DisplayNameFor(model => model.items.active)
                                <input asp-for="items.active" class="form-check-input" type="checkbox" disabled>
                                <span class="form-check-sign">
                                    <span class="check"></span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <a asp-action="Index" class="btn btn-primary pull-right">Quay Về</a>
                </form>
            </div>
        </div>
    </div>
</div>